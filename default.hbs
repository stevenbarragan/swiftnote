    <link rel="apple-touch-icon" sizes="120x120" href="{{asset "favicon/apple-touch-icon-120x120.png"}}">
    <link rel="apple-touch-icon" sizes="144x144" href="{{asset "favicon/apple-touch-icon-144x144.png"}}">
